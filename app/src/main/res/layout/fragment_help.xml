<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Guess the hidden word in 6 attempts"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="The colors of the letters will change to show which letters are in the hidden word"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:layout_editor_absoluteX="1dp">

        <FrameLayout style="@style/dummy_square_style">

            <TextView
                android:id="@+id/textView11"
                style="@style/center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:layout_width="64dp"
            android:layout_height="64dp">

            <TextView
                android:id="@+id/textView12"
                style="@style/center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:layout_width="64dp"
            android:layout_height="64dp">

            <TextView
                android:id="@+id/textView14"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:layout_width="64dp"
            android:layout_height="64dp">

            <TextView
                android:id="@+id/textView15"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:layout_width="64dp"
            android:layout_height="64dp">

            <TextView
                android:id="@+id/textView17"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>