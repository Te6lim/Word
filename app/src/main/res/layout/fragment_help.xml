<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="com.te6lim.word.help.HelpFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/helpToolBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/backgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout9">

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView122"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView13"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/misplaced_square_background">

            <TextView
                android:id="@+id/textView144"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView155"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView177"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E" />
        </FrameLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout99"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView188"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="The letter P is in the word, but in the wrong position"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Guess the hidden word in 6 attempts"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helpToolBar" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="The color of the letters will change to show which letters are in the hidden word"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/correct_square_background">

            <TextView
                android:id="@+id/textView11"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView12"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView14"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView15"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView17"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N" />
        </FrameLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="The letter C is in the word, but in the right position"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/linearLayout22"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout99">

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView123"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView133"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView145"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/square_background">

            <TextView
                android:id="@+id/textView156"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E" />
        </FrameLayout>

        <FrameLayout
            style="@style/dummy_square_style"
            android:background="@drawable/wrong_square_background">

            <TextView
                android:id="@+id/textView178"
                style="@style/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N"
                android:textColor="@android:color/white" />
        </FrameLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout90"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout22">

        <TextView
            android:id="@+id/textView189"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="The letter N is not in the word"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frameLayout8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout90">

    </FrameLayout>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="A new word will be available each day!"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout8" />
</androidx.constraintlayout.widget.ConstraintLayout>